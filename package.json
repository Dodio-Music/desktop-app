{
    "name": "dodio",
    "version": "1.0.0",
    "description": "An Electron based application for accessing Dodio services.",
    "main": "./out/main/index.js",
    "author": "underswing",
    "type": "module",
    "build": {
        "appId": "com.underswing.dodio",
        "productName": "Dodio",
        "directories": {
            "output": "dist"
        },
        "files": [
            "out/**/*",
            "package.json",
            "node_modules/ffmpeg-static/**/*",
            "resources/**/*"
        ],
        "extraResources": [
            {
                "from": "node_modules/ffmpeg-static",
                "to": "ffmpeg",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "resources/dodo_whiteondark.ico"
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage",
            "icon": "resources/dodo_whiteondark_512.png"
        }
    },
    "scripts": {
        "lint": "eslint --cache .",
        "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "npm run typecheck:node && npm run typecheck:web",
        "start": "electron-vite preview",
        "dev": "electron-vite dev",
        "build": "npm run typecheck && electron-vite build && electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "build:unpack": "npm run build && electron-builder --dir",
        "build:win": "npm run typecheck && npm run build && electron-builder --win",
        "build:mac": "npm run typecheck && electron-vite build && electron-builder --mac",
        "build:linux": "npm run typecheck && electron-vite build && electron-builder --linux",
        "test:unit": "vitest run --coverage"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.2",
        "@electron-toolkit/utils": "^4.0.0",
        "@phosphor-icons/react": "^2.1.10",
        "@reduxjs/toolkit": "^2.9.0",
        "@uidotdev/usehooks": "^2.4.1",
        "@underswing/naudiodon": "github:underswing/naudiodon",
        "axios": "^1.12.2",
        "classnames": "^2.5.1",
        "electron-updater": "^6.3.9",
        "ffmpeg-static": "^5.2.0",
        "music-metadata": "^11.8.3",
        "p-limit": "^7.1.1",
        "react-hot-toast": "^2.6.0",
        "react-icons": "^5.5.0",
        "react-redux": "^9.2.0",
        "react-router-dom": "^7.8.2",
        "sharp": "^0.34.4",
        "timeago.js": "^4.0.2"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config-ts": "^3.0.0",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@types/node": "^22.16.5",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@types/react-router-dom": "^5.3.3",
        "@vitejs/plugin-react": "^4.7.0",
        "@vitest/coverage-v8": "^4.0.7",
        "electron": "^37.2.3",
        "electron-builder": "^25.1.8",
        "electron-vite": "^4.0.0",
        "eslint": "^9.31.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "typescript": "^5.8.3",
        "vite": "^7.1.4",
        "vitest": "^4.0.7"
    }
}
