{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.*",
        "src/main/**/*",
        "src/preload/**/*",
        "src/shared/**/*"
    ],
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "NodeNext",
        "composite": true,
        "types": [
            "electron-vite/node",
            "node"
        ],
    }
}
