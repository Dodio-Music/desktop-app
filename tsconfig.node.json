{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.*",
        "src/main/**/*",
        "src/preload/**/*",
        "src/shared/**/*",
        "tests/**/*"
    ],
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "composite": true,
        "types": [
            "electron-vite/node",
            "node"
        ],
        "allowImportingTsExtensions": true,
    }
}
